<Window x:Class="zad2_pop3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zad2_pop3"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="ConnectionButton" Content="Connect" HorizontalAlignment="Left" Margin="432,10,0,0" VerticalAlignment="Top" Width="75" Click="ConnectionButtonClicked"/>
        <TextBox x:Name="EmailsList" HorizontalAlignment="Left" Height="244" Margin="10,66,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="497"/>
        <Label x:Name="StatusLabel" Content="Not connected" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ClearButton" Content="Clear" HorizontalAlignment="Left" Margin="432,37,0,0" VerticalAlignment="Top" Width="75" Click="ClearButtonClicked"/>
        <Button x:Name="RefreshButton" Content="Refresh" HorizontalAlignment="Left" Margin="352,37,0,0" VerticalAlignment="Top" Width="75" Click="RefreshButtonClicked" IsEnabled="False"/>
        <Label x:Name="UpdateListLabel" Content="" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
